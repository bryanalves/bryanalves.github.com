<ul reversed class="postlist w-full list-none pl-0 sm:pl-6">
  {% for post in postslist | reverse %}
    <li class="my-5 px-0 mx-0">
      <div class="grid grid-cols-10">
        <div
          class="align-text-bottom col-span-4 md:col-span-3 flex flex-row items-end "
        >
          <time datetime="{{ post.date | htmlDateString }}">
            {{ post.date | readableDate("LLL dd, yyyy") }}
          </time>
        </div>

        <a class="col-span-6 md:col-span-7" href="{{ post.url }}">
          {% if post.data.title %}
            {{ post.data.title }}
          {% else %}
            <code>{{ post.url }}</code>
          {% endif %}
        </a>
      </div>
    </li>
  {% endfor %}
</ul>
